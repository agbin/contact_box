def addEmail(request):
    form = EmailForm()
    if request.method == "POST":
        if form.is_valid():
            form_email = EmailForm(request.POST)
            if form_email.is_valid():
                new_email = form_email.save()
                new_email.save()
        return redirect('/')
    return render(request, 'addEmail.html', {
        'EmailForm': form
    })
